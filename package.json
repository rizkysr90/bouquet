{
  "name": "aslam-flower",
  "private": true,
  "scripts": {
    "build:css": "npx tailwindcss -i ./web/css/input.css -o ./web/static/css/styles.css --minify",
    "watch:css": "npx tailwindcss -i ./web/css/input.css -o ./web/static/css/styles.css --watch",
    "copy:htmx": "mkdir -p web/static/js && cp node_modules/htmx.org/dist/htmx.min.js web/static/js/htmx.min.js",
    "build:assets": "npm run build:css && npm run copy:htmx",
    "dev": "concurrently -n go,css \"air -c .air.toml\" \"npm run watch:css\""
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "htmx.org": "1.9.10",
    "tailwindcss": "^3.4.17"
  }
}